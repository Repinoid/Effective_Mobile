loki.write "main" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

loki.source.docker "app_logs" {
  targets = [{
    __address__ = "localhost",
    __path__ = "/var/run/docker.sock",
  }]
  host = "unix:///var/run/docker.sock"
  labels = {
    job = "myapp",
    app = "backend",
    container = "sapp",
  }
  forward_to = [loki.write.main.receiver]
 
 
}