loki.write "main" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

loki.source.file "app_logs" {
  targets = [{
    __address__ = "localhost",
    __path__ = "/var/log/myapp/app.log",
    job = "myapp",
    environment = "dev",
    app = "backend",
  }]
  forward_to = [loki.write.main.receiver]
}